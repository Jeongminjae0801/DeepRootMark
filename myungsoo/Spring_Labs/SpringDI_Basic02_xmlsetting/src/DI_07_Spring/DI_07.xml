	<bean id="handler" class="DI_07_spring.ProtocolHandler">
		<property name="filters">
			<list>
				<bean class="DI_07_spring.EncFilter"></bean>
				<bean class="DI_07_spring.HeaderFilter"></bean>
				<bean class="DI_07_spring.ZipFilter"></bean>
			</list>
		</property>
