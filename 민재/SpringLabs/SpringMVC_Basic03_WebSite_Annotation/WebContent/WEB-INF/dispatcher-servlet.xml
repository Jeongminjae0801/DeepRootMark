	<!-- <bean name="/customer/notice.htm" class="controllers_customer.NoticeController" >
		<property name="noticedao" ref="noticeDao"></property>
	</bean>
	
	<bean name="/customer/noticeDetail.htm" class="controllers_customer.NoticeDetailController">
		<property name="noticedao" ref="noticeDao"></property>
	</bean>
	-->
			<!-- ***************************************** -->
			
			
	<!-- 공통 사용 DAO Bean 객체 생성 -->
	<bean id="noticeDao" class="dao.NoticeDao"></bean>
	
	<!-- 컨트롤러 생성 -->
	<bean class="ncontroller.CustomerController">
		<property name="noticedao" ref="noticeDao"></property>
	</bean>
	
	<!-- id 어떤 이름 하라고 정해짐 : multipartResolver -->
	<!-- 이미지 업로드 -->
	<bean id="multipartResolver" class="org.springframework.web.multipart.commons.CommonsMultipartResolver">
		<property name="maxUploadSize" value="10485760"></property>
	</bean>
</beans>