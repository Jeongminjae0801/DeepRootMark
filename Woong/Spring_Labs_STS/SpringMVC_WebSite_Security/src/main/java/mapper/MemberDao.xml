<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!-- 
	//회원정보 얻기
	public Member getMember(String uid) throws ClassNotFoundException, SQLException;
	
	//회원가입
	public int insert(Member member) throws ClassNotFoundException, SQLException;

	//회원 권한 주기(ROLE_USER)
	public int insertRole(String userid) throws ClassNotFoundException, SQLException;
 -->


<mapper namespace="dao.MemberDao">

	<!-- 회원정보 얻기 -->
	<select id="getMember" resultType="vo.Member">
		select *
		from member 
		where userid=#{userid}
	</select>
	
	<!-- 회원정보 얻기 -->
	<select id="getMemberPwd" resultType="String">
		select PWD
		from member 
		where userid=#{userid}
	</select>
	
	<!-- 회원가입 -->
	<insert id="insert" parameterType="vo.Member">
		insert into member(userid, pwd, name, gender, birth, is_lunar, cphone, email, habit, regdate) 
		values(	#{userid}, 
				#{pwd}, 
				#{name}, 
				#{gender}, 
				#{birth}, 
				#{isLunar}, 
				#{cPhone}, 
				#{email}, 
				#{habit},
				sysdate)
	</insert>
	
	<!-- 회원 권한 주기(ROLE_USER) -->
	<insert id="insertRole">
		insert into roll(userid, role_name) 
  	 	values( #{userid}, 'ROLE_USER')
	</insert>
	
	
	<!-- 회원 정보 수정 (UPDATE) -->
	<update id="update" parameterType="vo.Member">
		update member
		set pwd = #{pwd}, name=#{name}, cphone=#{cphone}, email=#{email}
		where userid = #{userid}
	</update>
</mapper>
