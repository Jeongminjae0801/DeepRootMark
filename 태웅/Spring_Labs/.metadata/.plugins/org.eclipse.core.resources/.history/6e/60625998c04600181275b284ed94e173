package Spring_DI4;

import org.springframework.context.ApplicationContext;
import org.springframework.context.support.ClassPathXmlApplicationContext;

public class Program {

	public static void main(String[] args) {
		/*
		NewRecord record = new NewRecord(100, 50, 60);
		NewRecordView view = new NewRecordView();
		
		view.setRecord(record);//객체 주입
		
		view.print();
		*/
		//위 코드로 했던 작업을 SpringFramework 에게 맡기고 ....
		//Spring IOC 안에 2개의 객체를 만들고 setter 주입하는 작업을 xml 파일 통해서...
		
		//설정 파일:DIConfig.xml(객체의 생성과 주입을 담당)
		//Spring 컨테이너를 생성하고 -> DIConfig.xml read (파싱)해서 ->
		//생성된 Spring 컨테이너(IOC) 안에...... 생성 ..... 주입
		ApplicationContext context = new ClassPathXmlApplicationContext("DIConfig.xml");
		//위 코드가 실행되면 IOC 컨테이너 생성 --> DIConfig.xml file read --> 객체생성, 의존 설정 --> END
		context.getBean();
	}
}
